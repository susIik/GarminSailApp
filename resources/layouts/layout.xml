<layouts>
    <layout id="MainLayout">
        <label id="heart_rate" x="center" y="center" text="125" font="Gfx.FONT_NUMBER_THAI_HOT" color="Graphics.COLOR_WHITE" justification="Graphics.TEXT_JUSTIFY_CENTER" />
        <label id="timertxt" x="center" y="5%" text="TIMER" font="Gfx.FONT_SYSTEM_XTINY" color="Graphics.COLOR_WHITE" justification="Graphics.TEXT_JUSTIFY_CENTER" />
        <label id="timer" x="center" y="13%" text="00:00:00" font="Gfx.FONT_SYSTEM_SMALL" color="Graphics.COLOR_WHITE" justification="Graphics.TEXT_JUSTIFY_CENTER" />
        <label id="speedtxt" x="center" y="75%" text="SPEED" font="Gfx.FONT_SYSTEM_XTINY" color="Graphics.COLOR_WHITE" justification="Graphics.TEXT_JUSTIFY_CENTER" />
        <label id="speed" x="center" y="83%" text="0" font="Gfx.FONT_SYSTEM_SMALL" color="Graphics.COLOR_WHITE" justification="Graphics.TEXT_JUSTIFY_CENTER" />
